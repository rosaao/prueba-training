<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="book_list_action">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first book
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="rental_list_action">
            <field name="name">Rental History</field>
            <field name="res_model">library.rental</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first rental
                </p>
            </field>
        </record>
        
        <menuitem name="Library"
                  id="menu_library"
                  sequence="3"/>
        
        <menuitem id="menu_library_sub" name="Library" parent="menu_library" sequence="1"/>
        
        <menuitem id="menu_library_books" name="Books" parent="menu_library_sub" sequence="1"
                  action="book_list_action"/>
        
        <menuitem id="menu_library_rental" name="Rental History" parent="menu_library_sub" sequence="2"
                  action="rental_list_action"/>
    </data>
</odoo>