<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">cooperative.volunteers.task.form</field>
            <field name="model">cooperative.volunteers.task</field>
            <field name="arch" type="xml">
                <form string="Task Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="task_type"/>
                                <field name="leader"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="start"/>
                                <field name="stop"/>
                                <field name="repeats"/>
                                <field name="frequency"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Volunteers">
                                <field name="volunteer_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">cooperative.volunteers.task.list</field>
            <field name="model">cooperative.volunteers.task</field>
            <field name="arch" type="xml">
                <tree string="Course list">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start"/>
                    <field name="stop"/>
                    <field name="task_type"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">cooperative.volunteers.task.search</field>
            <field name="model">cooperative.volunteers.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="description"/>
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo>